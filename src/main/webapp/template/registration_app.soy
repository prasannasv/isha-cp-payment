/**
 * Non-existent Id
 *
 * @param id - id of the salesforce object for the child
 */
{template .non_existent_id}
<!DOCTYPE html>
<html>
<head>
  <title>Payment for Children's Program</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>
<body>
  <section class="container">
    <div class="alert alert-danger">
      <strong>Failure!</strong> Unable to locate record for child with the id: {$id}. Make sure you copied the payment link correctly.
      If retrying doesn't solve it, please contact childrenscamp@ishausa.org with your payment link for support.
    </div>
  </section>
</body>
</html>
{/template}

/**
 * On a successful payment for the program, show this.
 *
 * @param childFullName
 * @param transactionId
 * @param message
 */
{template .payment_success}
<!DOCTYPE html>
<html>
<head>
  <title>Payment for Children's Program</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>
<body>
  <section class="container">
    <div class="alert alert-success">
      <strong>Success!</strong> Payment towards {$childFullName}'s registration for the program was successfully processed.
      Please note your transaction id for future reference: {$transactionId}. {$message}
    </div>
  </section>
</body>
</html>
{/template}

/**
 * On a failed payment for the program, show this.
 *
 * @param childFullName
 * @param longMessage
 */
{template .payment_failure}
<!DOCTYPE html>
<html>
<head>
  <title>Payment for Children's Program</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>
<body>
  <section class="container">
    <div class="alert alert-danger">
      <strong>Failure!</strong> Payment towards {$childFullName}'s registration for the program failed.
      Reason: {$longMessage}.
    </div>
  </section>
</body>
</html>
{/template}

/**
 * When looking up a participant whose payment was already processed successfully.
 *
 * @param childFullName
 * @param parentsFullName
 * @param parentsEmail
 * @param amount
 * @param paymentDate
 * @param transactionId
 */
{template .payment_already_processed}
<!DOCTYPE html>
<html>
<head>
  <title>Payment for Children's Program</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>
<body>

  <div class="container">
    <div class="alert alert-success">
      <strong>Success!</strong> Payment towards {$childFullName}'s registration for the program was successfully processed.
    </div>

    <table class="table table-striped table-bordered table-sm table-responsive">
      <tr>
        <td>Parent's Name</td>
        <td>{$parentsFullName}</td>
      </tr>
      <tr>
        <td>Parent's Email</td>
        <td>{$parentsEmail}</td>
      </tr>
      <tr>
        <td>Payment Amount</td>
        <td>${$amount}.00</td>
      </tr>
      <tr>
        <td>Payment Date</td>
        <td>{$paymentDate}</td>
      </tr>
      <tr>
        <td>Transaction Id</td>
        <td>{$transactionId}</td>
      </tr>
    </table>
  </div>
</body>
</html>
{/template}
